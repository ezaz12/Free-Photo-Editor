<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#979595"
    tools:context=".result_Activity">

    <ImageView

        android:id="@+id/backbtn"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:tint="#EF0D0D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_left_arrow" />

    <ImageView
        android:id="@+id/homebtn"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="363dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:tint="#EF0D0D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backbtn"
        app:layout_constraintTop_toTopOf="@+id/backbtn"
        app:srcCompat="@drawable/ic_home" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/shareBtn"
        android:layout_width="24dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/darker_gray"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@+id/whatsapBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:srcCompat="@drawable/ic_share" />

    <ImageView
        android:id="@+id/whatsapBtn"
        android:layout_width="24dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/facebookBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/shareBtn"
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:srcCompat="@drawable/ic_whatsapp" />

    <ImageView
        android:id="@+id/facebookBtn"
        android:layout_width="24dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/whatsapBtn"
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:srcCompat="@drawable/ic_facebook" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whatsapBtn"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/adib" />

</androidx.constraintlayout.widget.ConstraintLayout>